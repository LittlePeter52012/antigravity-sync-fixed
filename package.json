{
  "name": "antigravity-sync-fixed",
  "displayName": "Antigravity 同步与自动重试",
  "description": "自动同步 AI 上下文 + 自动重试（Auto Retry），减少看护与手动操作。/ Sync AI context + Auto Retry, less babysitting.",
  "version": "0.4.5",
  "publisher": "LittlePeter52012",
  "author": "LittlePeter52012",
  "icon": "resources/icons/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LittlePeter52012/antigravity-sync-fixed"
  },
  "bugs": {
    "url": "https://github.com/LittlePeter52012/antigravity-sync-fixed/issues"
  },
  "homepage": "https://github.com/LittlePeter52012/antigravity-sync-fixed#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "antigravity sync",
    "antigravity auto retry",
    "antigravity auto retry",
    "auto retry",
    "auto retry",
    "cursor auto retry",
    "vscode auto retry",
    "ai agent automation",
    "zero babysitting",
    "cdp automation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "antigravitySync.configure",
        "title": "Antigravity 同步：配置仓库",
        "icon": "$(gear)"
      },
      {
        "command": "antigravitySync.syncNow",
        "title": "Antigravity 同步：立即同步",
        "icon": "$(sync)"
      },
      {
        "command": "antigravitySync.push",
        "title": "Antigravity 同步：推送更改",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "antigravitySync.pull",
        "title": "Antigravity 同步：拉取更改",
        "icon": "$(cloud-download)"
      },
      {
        "command": "antigravitySync.showStatus",
        "title": "Antigravity 同步：查看状态",
        "icon": "$(info)"
      },
      {
        "command": "antigravitySync.openPanel",
        "title": "Antigravity 同步：打开面板",
        "icon": "$(window)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "antigravity-sync-fixed",
          "title": "Antigravity 同步",
          "icon": "resources/icons/sidebar.svg"
        }
      ]
    },
    "views": {
      "antigravity-sync-fixed": [
        {
          "type": "webview",
          "id": "antigravitySync.mainPanel",
          "name": "同步面板"
        }
      ]
    },
    "configuration": {
      "title": "Antigravity 同步",
      "properties": {
        "antigravitySync.repositoryUrl": {
          "type": "string",
          "default": "",
          "description": "用于同步的私有 Git 仓库地址（必须是私有仓库）"
        },
        "antigravitySync.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用或禁用自动同步功能"
        },
        "antigravitySync.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "文件变更时自动同步"
        },
        "antigravitySync.syncIntervalMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "自动同步间隔（分钟）"
        },
        "antigravitySync.excludePatterns": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "额外排除的文件/目录规则"
        },
        "antigravitySync.geminiPath": {
          "type": "string",
          "default": "",
          "description": ".gemini 目录自定义路径（默认：~/.gemini/antigravity）"
        },
        "antigravitySync.syncFolders": {
          "type": "array",
          "default": [
            "knowledge",
            "brain",
            "conversations",
            "skills",
            "annotations"
          ],
          "items": {
            "type": "string"
          },
          "description": "在 .gemini 中需要同步的目录"
        },
        "antigravitySync.syncRepoSubdir": {
          "type": "string",
          "default": ".antigravity-sync",
          "description": "同步数据在仓库中的子目录（默认 .antigravity-sync，避免影响仓库其他内容）"
        },
        "antigravitySync.syncPasswordEnabled": {
          "type": "boolean",
          "default": false,
          "description": "是否启用同步密码校验（用于设备间验证，不会自动加密仓库内容）"
        },
        "antigravitySync.autoRetryEnabled": {
          "type": "boolean",
          "default": false,
          "description": "启用自动重试（需要配置 CDP 调试端口）"
        },
        "antigravitySync.autoStartRetry": {
          "type": "boolean",
          "default": false,
          "description": "IDE 启动时自动开启自动重试"
        },
        "antigravitySync.cdpPort": {
          "type": "number",
          "default": 31905,
          "minimum": 1024,
          "maximum": 65535,
          "description": "CDP 远程调试端口（用于自动重试）"
        },
        "antigravitySync.cdpPortRange": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "description": "扫描端口范围（端口 ± 范围）"
        },
        "antigravitySync.autoRetryInterval": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 30,
          "description": "自动重试检查间隔（秒）"
        },
        "antigravitySync.autoRetryMaxRetries": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "maximum": 500,
          "description": "自动重试最大次数"
        },
        "antigravitySync.autoRetryCooldown": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "点击重试按钮后的冷却时间（秒）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "vscode-test",
    "package": "vsce package --no-yarn",
    "publish": "vsce publish --no-yarn"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/vscode-webview": "^1.57.4",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "chokidar": "^3.5.3",
    "ignore": "^5.3.0",
    "simple-git": "^3.21.0",
    "ws": "^8.14.0"
  }
}
